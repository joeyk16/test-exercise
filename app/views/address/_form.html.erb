<%= simple_form_for @address do |f| %>
  <%= f.input :default_devlivery_address, as: :boolean %>
  <%= f.input :default_billing_address, as: :boolean %>
  <%= f.input :address_line_1 %>
  <%= f.input :address_line_2 %>
  <%= f.input :suburb %>
  <%= f.input :state %>
  <%= f.input :postcode %>
  <%= f.input :country %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
