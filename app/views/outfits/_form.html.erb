<div class="container">
  <%= simple_form_for :outfit, :url => {:action => :create} do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :outfit_image, as: :file %>
      <%= f.input :caption %>
      <%= f.input :tag_list,label:"Tags - Seperate tags using comma ','. 5 tags allowed per item " %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>