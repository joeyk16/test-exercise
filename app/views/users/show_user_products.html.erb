<%= javascript_include_tag :all  %>
<div class="container">
  <div class="page-header">
    <h1><%= @user.username %> <small>Edit Products</small></h1>
  </div>
  <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><div class ="small_fifty_image"><%= image_tag product.image.url(:thumb) %></div></td>
          <td><h4><%= link_to product.title, product_url(product.id) %></h4></td>
          <td>$<%=product.price %></td>
          <td>
            <button type="button" class="btn btn-default btn-sm"><%= link_to "Edit Products", edit_product_path(product) %></button>
            <button type="button" class="btn btn-default btn-sm"><%= link_to "Delete", product, method: :delete, data: { confirm: "You sure?" } %></button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>