<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<button type="button" class="btn btn-success"><%= link_to 'New Category', new_category_path %></button>

<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Category</th>
      <th>Parent Category</th>
      <th>Sizes</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category, ancestry| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.parent %></td>
        <td><%= category.sizes %></td>
        <td><%= link_to 'Show', category %><%= link_to 'Edit', edit_category_path(category) %><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

