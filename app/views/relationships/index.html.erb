<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Follower</th>
      <th>Action</th>
  </thead>
  <tbody>
    <% @relationships.each do |relationship| %>
      <tr>
        <td> <%= relationship.user.username %> </td>
        <td>
          <button type="button" class="btn btn-default btn-sm"><%= link_to "Delete", user_relationship_path(user_id: params[:user_id], id: relationship.id), method: :delete, data: { confirm: "You sure?" } %></button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
