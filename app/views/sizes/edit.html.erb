<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <center><h1>Update <%=@size.title%></h1></center>
    <div class="panel panel-primary">
      <div class="panel-body">
        <%= simple_form_for @size do |f| %>
          <%= f.input :title %>
          <%= f.button :submit, "Update Size", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>