<div class = "container padding_top">
  <div class = "row container">
    <div class = "col-md-6">
      <div class = "items_image">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <% if @product.product_images[1] %>
              <li data-target="#myCarousel" data-slide-to="1"></li>
            <% end %>
            <% if @product.product_images[2] %>
              <li data-target="#myCarousel" data-slide-to="2"></li>
            <% end %>
            <% if @product.product_images[3] %>
              <li data-target="#myCarousel" data-slide-to="3"></li>
            <% end %>
            <% if @product.product_images[4] %>
              <li data-target="#myCarousel" data-slide-to="4"></li>
            <% end %>
          </ol>
          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <%= image_tag @product.product_images[0].product_image.url(:large) %>
            </div>
            <% if @product.product_images[1] %>
              <div class="item">
                <%= image_tag @product.product_images[1].product_image.url(:large) %>
              </div>
            <% end %>
            <% if @product.product_images[2] %>
              <div class="item">
                <%= image_tag @product.product_images[2].product_image.url(:large) %>
              </div>
            <% end %>
            <% if @product.product_images[3] %>
              <div class="item">
                <%= image_tag @product.product_images[3].product_image.url(:large) %>
              </div>
            <% end %>
          </div>
          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
    <!-- right column -->
    <div class="col-lg-6 col-md-6 col-sm-5">
      <div class = "itemtitle"><%= @product.title %></div>

      <div class = "price">$<%= @product.price %></div>

      <% if current_user == @product.user %>
        <%= link_to "Edit Products", edit_product_path(@product) %>
      <% end %>

      <div class="productFilter productFilterLook2">
        <%= render 'orders/form', order: @order, product: @product, shipping: @shipping, sizes: @sizes %>
      </div>

      <div class="sellerinfoitemshow">
        <%= image_tag @product.user.avatar.url(:thumb) %>
        <h5><%= link_to "#{@product.user.username}", user_path(@product.user) %></h5>
        <p> 100% Positive Feedback</p>
        <div class="rating">
          <p>
            <span><i class="fa fa-star"></i></span> <span><i class="fa fa-star"></i></span>
            <span><iclass="fa fa-star"></i></span> <span><i class="fa fa-star"></i></span>
          </p>
        </div>
      </div>
  		<p> Tags: <%= raw @product.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %> </p>
      <div class="product-tab w100 clearfix">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#details" data-toggle="tab">Item Details</a></li>
          <li><a href="#size" data-toggle="tab">Size Details</a></li>
          <li><a href="#shipping" data-toggle="tab">Shipping Details</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="details">
            <%= @product.description %>
          </div>
          <div class="tab-pane" id="size">
            <%= @product.size_description %>
          </div>
          <div class="tab-pane" id="shipping">
            <%= @product.shipping_description %>
          </div>
        </div><!-- /.tab content -->
      </div><!--/.product-tab-->
    </div><!--/ right column end -->
  </div>
</div>
